{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es2023"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.js",
    "test/**/*.js",
    "typings/gitdown.d.ts",
    "typings/babel__eslint-parser.d.ts",
    "src/import-worker.mjs"
  ]
}
