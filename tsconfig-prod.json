{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": [
      "es2023"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "node_modules",
    "src/bin/*.js"
  ],
  "include": [
    "src/**/*.js"
  ]
}
