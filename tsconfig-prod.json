{
  "compilerOptions": {
    "lib": ["es2022"],
    "moduleResolution": "Node",
    "module": "Commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "es2017",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": ["node_modules", "src/bin/*.js"]
}
