{
  "compilerOptions": {
    "lib": ["es2022"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2018",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": ["node_modules", "src/bin/*.js"]
}
