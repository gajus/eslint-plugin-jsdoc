{
  "env": {
    "browser": false
  },
  "extends": ["plugin:vue/recommended", "canonical"],
  "plugins": ["vue","jsdoc"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "overrides": [
    {
      "files": ".ncurc.js",
      "parserOptions": {
        "ecmaFeatures": {
          "impliedStrict": false
        },
        "sourceType": "script"
      },
      "rules": {
        "import/no-commonjs": 0,
        "strict": [
          "error",
          "global"
        ]
      }
    }
  ],
  "root": true,
  "rules": {
    "linebreak-style": "off",
    "array-element-newline": 0,
    "filenames/match-regex": 0,
    "import/extensions": 0,
    "prefer-named-capture-group": 0,
    "unicorn/no-array-reduce": 0,
    "unicorn/no-unsafe-regex": 0,
    "unicorn/prefer-array-some": 0,
    "unicorn/prevent-abbreviations": 0,

    "jsdoc/require-description": ["error", { "descriptionStyle": "tag" }], // NOT Recommended: was 0
    "jsdoc/require-param": "error", // Recommended
    "jsdoc/require-param-description": "error" // Recommended
  }
}
