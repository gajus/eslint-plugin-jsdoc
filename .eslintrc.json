{
  "env": {
    "node": true,
    "browser": false
  },
  "extends": "canonical",
  "overrides": [
    {
      "files": ".ncurc.js",
      "parserOptions": {
        "ecmaFeatures": {
          "impliedStrict": false
        },
        "sourceType": "script"
      },
      "rules": {
        "import/no-commonjs": 0,
        "strict": [
          "error",
          "global"
        ]
      }
    }
  ],
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  },
  "root": true,
  "rules": {
    "array-element-newline": 0,
    "filenames/match-regex": 0,
    "import/extensions": 0,
    "prefer-named-capture-group": 0,
    "unicorn/no-array-reduce": 0,
    "unicorn/no-unsafe-regex": 0,
    "unicorn/prefer-array-some": 0,
    "unicorn/prevent-abbreviations": 0,
    "linebreak-style": 0,
    "no-inline-comments": 0,
    "no-extra-parens": 0
  }
}
